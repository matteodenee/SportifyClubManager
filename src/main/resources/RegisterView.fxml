<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sportify.manager.frame.RegisterFrame">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Text text="Register New Account" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane vgap="10" hgap="10" alignment="CENTER">
        <Label text="User ID / Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="idField" promptText="username" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Display Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="nameField" promptText="nom Ã  afficher" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="emailField" promptText="email" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <ChoiceBox fx:id="roleChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Register" onAction="#onRegister" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button text="Back to Login" onAction="#onBack" />
    </HBox>

    <Label fx:id="messageLabel" textFill="red" />
</VBox>
